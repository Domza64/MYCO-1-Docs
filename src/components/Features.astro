---
const features = [
  {
    title: 'Self-Hosted',
    description: 'One command Docker deployment. Your server, your rules.',
    icon: "/public/icons/server.svg",  
  },
  {
    title: 'Privacy First',
    description: 'Your music never leaves your infrastructure. Zero tracking.',
    icon: "/public/icons/safe.svg",
  },
  {
    title: 'Smart Indexing',
    description: 'Automatic metadata extraction from ID3 tags and audio files.',
    icon: "/public/icons/indexing.svg",  
  },
  {
    title: 'Instant Search',
    description: 'Blazing-fast search that finds any track the moment you start typing.',
    icon: "/public/icons/search.svg",
  },
  {
    title: 'Playlists',
    description: 'Create and manage custom playlists for every mood.',
    icon: "/public/icons/list.svg",  
  },
  {
    title: 'AI-Powered (Soon)',
    description: 'Smart recommendations and auto-playlists coming soon.',
    icon: "/public/icons/ai.svg",
  },
  {
    title: 'Multi-User Access',
    description: 'Create multiple users, manage permissions, and share music securely.',
    icon: '/public/icons/users.svg',
  }
];
---

<section class="container mx-auto">
  <div class="text-center mb-10">
    <h2 class="text-4xl font-bold pb-2">Everything You Need</h2>
    <p class="text-stone-400 text-lg">
      Powerful features wrapped in a beautiful interface
    </p>
  </div>

  <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
    {features.map((feature) => (
      <div
        class="group bg-linear-to-br from-white/5 to-white/2
               rounded-xl p-6 border border-white/10
               hover:border-rose-500/30 transition-all duration-300 hover:scale-105"
      >
        <div
          class="w-12 h-12 bg-linear-to-br from-rose-500/20 to-rose-600/10
                 rounded-lg flex items-center justify-center mb-4
                 group-hover:from-rose-500/30 group-hover:to-rose-600/20 transition-all"
        >
          <img src={feature.icon} alt="Icon" class="w-6 h-6">
        </div>

        <h3 class="text-lg font-semibold mb-2">{feature.title}</h3>
        <p class="text-stone-400 text-sm leading-relaxed">
          {feature.description}
        </p>
      </div>
    ))}
  </div>
</section>
