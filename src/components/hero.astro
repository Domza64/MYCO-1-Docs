            data-index="2"
            />
        </div>
    </div>
    <script>
        let currentSlide = 2; // Start with mockup-3
        const slides = document.querySelectorAll('.mockup-slide');
        const totalSlides = slides.length;

        function showSlide(index: number) {
            slides.forEach((slide, i) => {
                const htmlSlide = slide as HTMLElement;
                if (i === index) {
                    htmlSlide.style.opacity = '1';
                    htmlSlide.style.zIndex = '10';
                } else {
                    htmlSlide.style.opacity = '0';
                    htmlSlide.style.zIndex = '1';
                }
            });
        }

        function nextSlide() {
            currentSlide = (currentSlide + 1) % totalSlides;
            showSlide(currentSlide);
        }

        // Initial display
        showSlide(currentSlide);

        // Auto-rotate every 8 seconds
        setInterval(nextSlide, 8000);
    </script>
